<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/relativeHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".30"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/dotted_line"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:text="COUPONS :"
                android:textColor="@color/header"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textPoints"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/points"
                android:gravity="center"
                android:text="00"
                android:textColor="#fff"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".70">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight=".70"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center"
                android:text="Issue Coupons"
                android:textColor="@color/header"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- <Spinner
                     android:id="@+id/spinnerUserType"
                     android:layout_width="match_parent"
                     android:layout_height="40dp"
                     android:layout_weight=".49"
                     android:background="@drawable/rounded_rect_blue" />-->

                <LinearLayout
                    android:id="@+id/llUserType"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_line_small"
                    android:orientation="horizontal">


                    <!--  <AutoCompleteTextView
                          android:id="@+id/autoSearch"
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_gravity="center"
                          android:layout_weight=".90"
                          android:background="@null"
                          android:hint="Select User"
                          android:paddingLeft="10dp"
                          android:singleLine="true"
                          android:textColor="@color/white"
                          android:textSize="14sp" />-->
                    <Spinner
                        android:id="@+id/spinnerUserType"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight=".90"
                        android:background="@null"
                        android:hint="State"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_weight=".15"
                        android:src="@drawable/arrow_down" />
                </LinearLayout>

                <AutoCompleteTextView
                    android:id="@+id/autoSearch"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight=".49"
                    android:background="@drawable/rounded_rect_blue"
                    android:hint="Enter Name / Cust ID / Mobile"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/llData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.vkc.strabo.manager.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".30"
                            android:text="USER TYPE " />

                        <com.vkc.strabo.manager.CustomTextView
                            android:id="@+id/textViewType"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".70" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.vkc.strabo.manager.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".30"
                            android:text="CUST_ID " />

                        <com.vkc.strabo.manager.CustomTextView
                            android:id="@+id/textViewId"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".70" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.vkc.strabo.manager.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".30"
                            android:text="NAME " />

                        <com.vkc.strabo.manager.CustomTextView
                            android:id="@+id/textViewName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".70" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.vkc.strabo.manager.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".30"
                            android:text="ADDRESS " />

                        <com.vkc.strabo.manager.CustomTextView
                            android:id="@+id/textViewAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".70" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.vkc.strabo.manager.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".30"
                            android:text="PHONE " />

                        <com.vkc.strabo.manager.CustomTextView
                            android:id="@+id/textViewPhone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".70" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <com.vkc.strabo.manager.CustomEditTextBlack
                android:id="@+id/editPoints"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_rect_blue"
                android:hint="Enter coupon value"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.vkc.strabo.manager.CustomButtonWhite
                    android:id="@+id/btnReset"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_weight=".50"
                    android:background="@drawable/dialog_button_rounded"
                    android:text="Reset"
                    android:textColor="@color/white" />

                <com.vkc.strabo.manager.CustomButtonWhite
                    android:id="@+id/btnSubmit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_weight=".50"
                    android:background="@drawable/dialog_button_rounded"
                    android:text="Submit"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>